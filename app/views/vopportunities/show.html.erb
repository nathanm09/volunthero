    <% @vopportunity_enrolment ||= @vopportunity.vopportunity_enrolments.build %>
    <%= form_with model: [@vopportunity, @vopportunity_enrolment], local: true do |form| %>  
    <main class="page-content">
        <section class="section-50 section-sm-100">
          <div class="shell">
            <div class="range range-xs-center">
              <div class="cell-sm-6 text-lg-left">
                <!-- Slick Carousel-->
                <div data-arrows="false" data-loop="false" data-dots="false" data-swipe="false" data-items="1" data-child="#child-carousel" data-for="#child-carousel" class="slick-slider carousel-parent">
                  <div class="item"><img src="<%= image_path(@vopportunity.vopplogo) %>" alt="" width="542" height="530" class="img-responsive reveal-inline-block"/>
                  </div>
                </div>
                <div id="child-carousel" data-for=".carousel-parent" data-arrows="false" data-loop="false" data-dots="false" data-swipe="true" data-items="3" data-xs-items="3" data-sm-items="3" data-md-items="4" data-lg-items="5" data-slide-to-scroll="1" class="slick-slider align-center">
                  <div class="item">
                    <div><img src="<%= image_path(@vopportunity.vopplogo) %>" alt="" width="64" height="63"/>
                    </div>
                  </div>
                </div>
              </div>
              <div class="cell-sm-6 cell-lg-5 text-sm-left offset-top-60 offset-sm-top-0">
                <div class="reveal-xs-flex range-xs-middle range-xs-center range-sm-left">
                  <h4 class="font-default"><%= @vopportunity.voppname %></h4>
                  <div class="inset-xs-left-50 offset-top-0">
                    <div class="team-member-position team-member-position-burnt-sienna"><span class="big text-italic text-middle">???</span></div>
                  </div>
                </div>
                <div class="offset-top-15">
                  <p><% @vopportunity.vorganization.vorgname %></p>
                </div>
                <hr class="offset-top-30 veil reveal-sm-block">
                <div class="offset-top-30">
                  <div class="responsive-tabs responsive-tabs-shop responsive-tabs-horizontal">
                    <ul class="resp-tabs-list">
                      <li><span class="icon icon-circle">Date</span><span class="price"><%= @vopportunity.created_at.strftime ("%B %-d, %Y") %></span></li>
                    </ul>
                  </div>
                </div>
                <div class="offset-top-45">
                  <div class="group-sm">
                    <% if current_vhero %>
                    <% if VopportunityEnrolment.exists?(vhero_id: current_user.id, vopportunity_id: @vopportunity.id) %>
                        <span><%= link_to 'Cancel Enrollment', vopportunity_enrolment_path(vhero_id: current_user.id, vopportunity_id: @vopportunity.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-burnt-sienna btn-fullwidth btn-shadow" %></span>
                    <% else %>
                      <span><%= form.submit 'Enroll', class: "btn btn-burnt-sienna btn-fullwidth btn-shadow" %></span>
                    <% end %>
                    <% else %>
                      <span><h5><%= link_to 'Log In to Enroll', vherologin_path, class: "btn btn-burnt-sienna btn-fullwidth btn-shadow" %></h5></span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <section class="text-left">
          <div class="responsive-tabs responsive-tabs-horizontal responsive-tabs-horizontal-background">
            <ul class="resp-tabs-list shell">
              <li>Description</li>
              <li>Organization</li>
            </ul>
            <div class="resp-tabs-container">
              <div>
                <p class="text-base"><%= @vopportunity.shortdescr %></p>
              </div>
              <div>
                <p class="text-base">Should put a description of the organization here.</p>
              </div>
            </div>
          </div>
        </section>
        <% end %>
      </main>

<%= link_to 'Back', vopportunities_path %>

<%= javascript_include_tag "core.min" %>
<%= javascript_include_tag "script" %>