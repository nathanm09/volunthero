                    <img src="<%= image_path(@vopportunity.vopplogo) %>" alt="" width="569" height="656" class="img-responsive"/>
                    <% if current_vhero %>
                    <% if VopportunityEnrolment.exists?(vhero_id: current_user.id, vopportunity_id: @vopportunity.id) %>
                    <div class="caption">
                      <div class="group-lg">
                        <ul class="list-inline text-middle">
                        </ul><%= link_to 'Cancel Enrollment', vopportunity_enrolment_path(vhero_id: current_user.id, vopportunity_id: @vopportunity.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-white-outline btn-shape-circle text-middle" %>
                      </div>
                    </div>
                    <% else %>
                    <div class="caption">
                      <div class="group-lg">
                        <ul class="list-inline text-middle">
                        </ul><%= form.submit 'Enroll', class: "btn btn-burnt-sienna btn-fullwidth btn-shadow" %>
                      </div>
                    </div>
                    <% end %>
                    <% else %>
                    <% if current_vorg %>

                    <% else %>
                    <div class="caption">
                      <div class="group-lg">
                        <ul class="list-inline text-middle">
