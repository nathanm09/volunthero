                  </div>
                </div>
                <div class="offset-top-15">
                  <p><% @vopportunity.vorganization.vorgname %></p>
                </div>
                <hr class="offset-top-30 veil reveal-sm-block">
                <div class="offset-top-30">
                  <div class="responsive-tabs responsive-tabs-shop responsive-tabs-horizontal">
                    <ul class="resp-tabs-list">
                      <li><span class="icon icon-circle">Date</span><span class="price"><%= @vopportunity.created_at.strftime ("%B %-d, %Y") %></span></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <section class="text-left">
          <div class="responsive-tabs responsive-tabs-horizontal responsive-tabs-horizontal-background">
            <ul class="resp-tabs-list shell">
              <li>Opp. Description</li>
              <li>Hero Description</li>
              <li>Organization</li>
            </ul>
            <div class="resp-tabs-container">
              <div>
                <p class="text-base"><%= @vopportunity.shortdescr %></p>
              </div>
              <div>
                <p class="text-base"><%= @vopportunity.vherodescription %></p>
              </div>
              <div>
                <p class="text-base"><%= @vopportunity.vorganization.shortdescr %></p>
              </div>
            </div>
          </div>
        </section>
        <% end %>
