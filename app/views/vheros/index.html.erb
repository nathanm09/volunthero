<p id="notice"><%= notice %></p>

<h1>Vheros</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Password</th>
      <th>Shortdescr</th>
      <th>Jobtitle</th>
      <th>Organization</th>
      <th>Lastschool</th>
      <th>City</th>
      <th>Province</th>
      <th>Country</th>
      <th>Handles</th>
      <th>Interests</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vheros.each do |vhero| %>
      <tr>
        <td><%= vhero.firstname %></td>
        <td><%= vhero.lastname %></td>
        <td><%= vhero.email %></td>
        <td><%= vhero.password %></td>
        <td><%= vhero.shortdescr %></td>
        <td><%= vhero.jobtitle %></td>
        <td><%= vhero.organization %></td>
        <td><%= vhero.lastschool %></td>
        <td><%= vhero.city %></td>
        <td><%= vhero.province %></td>
        <td><%= vhero.country %></td>
        <td><%= vhero.handles %></td>
        <td><%= vhero.interests %></td>
        <td><%= link_to 'Show', vhero %></td>
        <td><%= link_to 'Edit', edit_vhero_path(vhero) %></td>
        <td><%= link_to 'Destroy', vhero, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'New Vhero', new_vhero_path %></p>

<p><%= link_to 'Home', home_index_path %></p>
