<!--Page > Volunthero profile page-->
        <section class="section-top-50 section-sm-top-100">
          <div class="shell">
            <div class="range range-xs-center">
              <div class="cell-sm-7 cell-md-6">
                <div class="img-thumbnail-custom"><%= image_tag @vhero.image unless @vhero.image.nil?, class: "img-responsive", alt: "You NEED a Profile Picture", resize: "569x656" %>
                </div>
              </div>
              <div class="cell-sm-7 cell-md-6 text-sm-left offset-sm-top-30 offset-md-top-0">
                <div class="inset-lg-left-70">
                  <div class="reveal-xs-flex range-xs-justify range-xs-middle">
                    <h4 class="font-default"><%= @vhero.firstname %> <%= @vhero.lastname %></h4>
                    <div class="team-member-position offset-top-0"><span class="big text-italic text-middle"><%= @vhero.jobtitle %></span></div>
                  </div>
                  <div class="offset-top-10">
                    <ul class="list-inline list-inline-sm">
                      <li>
                        <div class="unit unit-horizontal unit-middle unit-spacing-xs">
                          <div class="unit-left"><span class="icon icon-xs text-primary mdi mdi-email-outline text-middle"></span></div>
                          <div class="unit-body"><%= link_to @vhero.email, class: "link-default" %></div>
                        </div>
                      </li>
                    </ul>
                  </div>
                  <p class="offset-top-20"><%= @vhero.shortdescr %></p>
                  <p class="offset-top-20"><%= link_to 'Edit', edit_vhero_path(@vhero), class: "btn btn-burnt-sienna btn-fullwidth btn-shadow" %></p>
                </div>
              </div>
            </div>
          </div>
          </section>
          <section class="text-center text-sm-left section-50 section-sm-top-80 section-sm-bottom-100 bg-ecru-white">
          <div class="shell">
            <h4 class="font-default text-center"><%=@vhero.firstname %>'s Hero Resume</h4>
            <div class="range">
            <% x = 2 %>
            <% @vhero.vopportunities.each do |vheroenrolment| 
            if vheroenrolment.present?
            if x.even? %>
            
              <div class="cell-sm-6">
                <div class="job-offer bg-white">
                  <%= link_to vheroenrolment, class: "h5" do %>
                  <%= vheroenrolment.voppname %>
                  <% end %>
                  <ul class="list-inline offset-top-10">
                    <li><span class="text-middle icon icon-xxs icon-primary mdi mdi-map-marker"></span><span class="text-middle">?</span></li>
                    <li><span class="text-middle icon icon-xxs icon-primary mdi mdi-clock"></span><span class="text-middle">?</span></li>
                    <li><span class="text-middle icon icon-xxs icon-primary mdi mdi-calendar"></span><span class="text-middle"><%= vheroenrolment.created_at %></span></li>
                  </ul>
                </div>
              </div>
            <% x = x + 1
            else %>
            <div class="cell-sm-6 offset-top-30 offset-sm-top-0">
                <div class="job-offer bg-white">
                  <%= link_to vheroenrolment, class: "h5" do %>
                  <%= vheroenrolment.voppname %>
                  <% end %>
                  <ul class="list-inline offset-top-10">
                    <li><span class="text-middle icon icon-xxs icon-primary mdi mdi-map-marker"></span><span class="text-middle">?</span></li>
                    <li><span class="text-middle icon icon-xxs icon-primary mdi mdi-clock"></span><span class="text-middle">?</span></li>
                    <li><span class="text-middle icon icon-xxs icon-primary mdi mdi-calendar"></span><span class="text-middle"><%= vheroenrolment.created_at %></span></li>
                  </ul>
                </div>
              </div>
            <% x = x + 1
               end
               end
             end %>
            </div>
          </div>
        </section>
      </main>
    </div>
    <%= javascript_include_tag "core.min" %>
    <%= javascript_include_tag "script" %>
<%= link_to 'Edit', edit_vhero_path(@vhero) %> |
